generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Confession {
  id        Int      @id @default(autoincrement())
  text      String   @db.VarChar(140)
  downVote  Int      @default(0)
  upVote    Int      @default(0)
  tags      String[]
  createdAt DateTime @default(now()) @map("created_at")

  @@map("confessions")
}
